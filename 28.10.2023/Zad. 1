// Obliczanie sumy wyrazów w ciągu arytmetycznym

#include <iostream>
using namespace std;

int main()
{
	int a1, r, n;
	cout << "Podaj pierwszy element ciagu: ";
	cin >> a1;
	cout << "Podaj roznice: ";
	cin >> r;
	cout << "Podaj liczbe elementow: ";
	cin >> n;

	int suma = 0;
	for (int i = 0; i < n; i++)
	{
		suma += a1;
		a1 += r;
	}
	cout << "Suma wyrazow tego ciagu to " << suma << endl;

	return 0;
}
